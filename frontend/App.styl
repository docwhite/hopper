body
  font: 12px Helvetica, Arial, sans-seriff

  h1
    text-align: center

.App
  ul
    list-style-type: none
    display: table
    margin: 0 auto
    padding-left: 0

    li
      display: inline
      float: left
      margin-right: 5px

    input[type=checkbox]
      visibility: hidden
      width: 0
      margin: 0 0 
      padding: 0 0

      + label
        border: solid 1px black
        padding: 5px
        background: #fff

      &:checked + label
        background: #eee


