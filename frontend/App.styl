body
  font 12px Helvetica, Arial, sans-seriff
  margin auto

  h1
    text-align center

.App
  ul
    display table
    list-style-type none
    margin 0 auto
    padding-left 0

    li
      display inline
      float left
      margin-right 5px

    input[type=checkbox]
      margin 0
      padding 0
      visibility hidden
      width 0

      + label
        background #fff
        border solid 1px black
        padding 5px

      &:checked + label
        background #eee


